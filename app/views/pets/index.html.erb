<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Kind</th>
      <th>Pr</th>
      <th>User</th>
      <th>Letter</th>
      <th>Letter2</th>
      <th>Letter3</th>
      <th>Zzimage</th>
      <th>Runimage</th>
      <th>Hp</th>
      <th>Pp</th>
      <th>Yobi</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.image %></td>
        <td><%= pet.kind %></td>
        <td><%= pet.pr %></td>
        <td><%= pet.user_id %></td>
        <td><%= pet.letter %></td>
        <td><%= pet.letter2 %></td>
        <td><%= pet.letter3 %></td>
        <td><%= pet.zzimage %></td>
        <td><%= pet.runimage %></td>
        <td><%= pet.hp %></td>
        <td><%= pet.pp %></td>
        <td><%= pet.yobi %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

